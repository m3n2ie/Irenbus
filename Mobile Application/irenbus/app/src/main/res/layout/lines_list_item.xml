<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/LinescardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="21dp"
                android:text="Title"
                android:textColor="@color/black"
                android:fontFamily="@font/mr"/>

            <TextView
                android:id="@+id/tvLineInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLineTitle"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:text="Click to download line timetable"
                android:fontFamily="ml"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>